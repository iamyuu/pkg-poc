{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2015"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["dist", "build", "node_modules"]
}
